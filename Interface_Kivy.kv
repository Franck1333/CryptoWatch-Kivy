<MaDisposition>

    BoxLayout:
        orientation: 'vertical'
        
        Label:                                               #WIDGET Permettant l'affichage d'un mot/phrase
            id: Label_Horloge                                #Identifiant permettant a ce label d'etre accessible via le code python
            text_language: "fr"                              #Ligne permettant de connaitre la langue utiliser dans ce label
            text: root.Time_Horloge                          #Valeur qui doit etre afficher a l'ecran

            bold: False                                      #Parametre permettant de mettre en gras un label
            italic: False                                    #Permet de mettre en italique le contenue du label
            underline : False                                #Permet de souligner le contenue du label
            color: (13,1,1,1)                                #Parametre permettant d'ajouter de la couleur a un label

        Label:
            id: Label_UtilisationCPU
            text_language: "fr"
            text: root.UtilisationCPU

            bold: False                                      #Parametre permettant de mettre en gras un label
            italic: False                                    #Permet de mettre en italique le contenue du label
            underline : False                                #Permet de souligner le contenue du label
            color: (73,1,1,1)                                #Parametre permettant d'ajouter de la couleur a un label

        Label:
            id: Label_MemoireUtilise
            text_language: "fr"
            text: root.MemoireUtilise

            bold: False                                      #Parametre permettant de mettre en gras un label
            italic: False                                    #Permet de mettre en italique le contenue du label
            underline : False                                #Permet de souligner le contenue du label
            color: (73,1,1,1)                                #Parametre permettant d'ajouter de la couleur a un label

        Label:
            id: Label_CPUtemp
            text_language: "fr"
            text: root.CPUtemp

            bold: False                                      #Parametre permettant de mettre en gras un label
            italic: False                                    #Permet de mettre en italique le contenue du label
            underline : False                                #Permet de souligner le contenue du label
            color: (73,1,1,1)                                #Parametre permettant d'ajouter de la couleur a un label

        Label:
            id: Label_BTC_Market
            text_language: "fr"
            text: root.BTC_Market

            bold: False                                      #Parametre permettant de mettre en gras un label
            italic: False                                    #Permet de mettre en italique le contenue du label
            underline : False                                #Permet de souligner le contenue du label
            color: (73,1,1,1)                                #Parametre permettant d'ajouter de la couleur a un label

        Button:                                                     #Ce bouton va nous permettre de changer d'ecran Kivy
            text:"En Direct du Marche"                              #On indique un texte sur le bouton
            on_press: root.manager.current = 'En Direct du Marche'  #On indique la fonction du bouton, dans ce cas le changement d'ecran via le ScreenManager de Kivy

        Button:
            text: "Surveillance du Marche"
            on_press: root.manager.current = 'Surveillance du Marche'

        Button:
            text: "Visualiser le cours du Marche"
            on_press: root.manager.current = 'Visualiser le cours du Marche'

    BoxLayout:
        orientation: 'horizontal'               #On indique une diposition differente, en Horizontal pour ce qui suit

        Image:                                  #On Indique l'utilisation d'image 
            id: Image_Fear_Greed_Index          #Un identifiant pour le widget
            source: root.Fear_Gread_Index_path  #On indique aussi le chemin que doit utiliser Kivy pour retrouver l'image, ici denominer par une variable string dans le programme Principal
            keep_ratio: True                    #On indique si on souhaite garder le ration d'affiche d'origine de l'image
            keep_data: True                     #On indique si on souhaite que Kivy garde en memoire les informations concernant l'image concerne


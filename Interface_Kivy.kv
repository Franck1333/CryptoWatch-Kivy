<En_Direct_Du_Marche>
    BoxLayout:
        orientation: 'vertical'

        Label:                                                                          #WIDGET Permettant l'affichage d'un mot/phrase
            id: Label_EDM                                                               #Identifiant permettant a ce label d'etre accessible via le code python
            text_language: "fr"                                                         #Ligne permettant de connaitre la langue utiliser dans ce label
            text: "En Direct du Marche - Les Paires a Surveiller"                       #Valeur qui doit etre afficher a l'ecran

            bold: False                                                                 #Parametre permettant de mettre en gras un label
            italic: False                                                               #Permet de mettre en italique le contenue du label
            underline : False                                                           #Permet de souligner le contenue du label
            color: (13,1,1,1)                                                           #Parametre permettant d'ajouter de la couleur a un label

        Button:
            text:"BTC-EUR"
            on_press: root.Rechercher_BTC_EUR()
        Button:
            text:"BTC-USD"
            on_press: root.Rechercher_BTC_USD()
        Button:
            text:"ETH-EUR"
            on_press: root.Rechercher_ETH_EUR()
        Button:
            text:"ETH-USD"
            on_press: root.Rechercher_ETH_USD()
        Button:
            text:"LINK-EUR"
            on_press: root.Rechercher_LINK_EUR()
        Button:
            text:"LINK-USD"
            on_press: root.Rechercher_LINK_USD()

        Label:
            text:"Effectue une Recherche"
        
        TextInput:
            id: Entree_texte_RECHERCHE                       #Identifiant permettant a ce label d'etre accessible via le code python
            text:"XLM-EUR"                                   #Texte visible dans l'entree texte lors de son affichage
            allow_copy: True                                 #Autorise le copier/coller
            auto_indent: True                                #Kivy peut automatiquement indenter le contenue de l'entree
            cursor_blink: True                               #Le curseur quand il sera place dans l'entree; il clignotera pour annoncer sa presence
            keyboard_suggestions : True                      #Les clavier intelligent pourront presenter a l'utilisateur des mots a suggerer a entree

        Button:
            text:"Go!"
            on_press: root.recuperation_input()

        Button:
            text:"Accueil"
            on_press: root.manager.current = 'Accueil'
